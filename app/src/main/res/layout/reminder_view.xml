<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/reminderCardView"
        android:layout_width="416dp"
        android:layout_height="53dp"
        app:cardBackgroundColor="#DDEEFF"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/dateTitleReminderTextView"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="18sp"
                tools:text="13-07-2020"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TimeTitleReminderTextView"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="18sp"
                tools:text="8:00 PM"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/DeleteReminderImageView"
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="Delete Reminder"
                app:srcCompat="@drawable/delete_icon" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>